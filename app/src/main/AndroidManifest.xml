<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Network (required for Supabase/Google) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- Keep only if your Staff flow truly needs it (remember: ask runtime permission) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <queries>
        <package android:name="com.whatsapp" />
        <package android:name="com.whatsapp.w4b" />
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HisabBook"
        tools:targetApi="31">
        <activity
            android:name=".SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".ReminderCopyActivity"
            android:exported="false" />
        <activity
            android:name=".LoanTrackerActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <receiver
            android:name="androidx.work.impl.background.systemalarm.ConstraintProxy$BatteryChargingProxy"
            android:enabled="false"
            tools:replace="android:enabled" />

        <activity
            android:name=".ShopActivity"
            android:exported="false" />
        <activity
            android:name=".CustomerDetailActivity"
            android:exported="false" />
        <activity
            android:name=".AddPurchaseActivity"
            android:exported="false" />
        <activity
            android:name=".Shop.CustomerDetailActivity"
            android:exported="false" />
        <activity
            android:name=".Shop.AddPurchaseActivity"
            android:exported="false" />
        <activity
            android:name=".Shop.ShopActivity"
            android:exported="false" />
        <activity
            android:name=".Bills.BillsActivity"
            android:exported="false" /> <!-- Other feature activities -->
        <activity
            android:name=".Staff.StaffPermissionsActivity"
            android:exported="false" />
        <activity
            android:name=".Staff.StaffDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".Staff.StaffConfigurationActivity"
            android:exported="false" />
        <activity
            android:name=".Staff.ContactPickerActivity"
            android:exported="false" />
        <activity
            android:name=".Staff.StaffActivity"
            android:exported="false" />
        <activity
            android:name=".CashbookReportActivity"
            android:exported="false" />
        <activity
            android:name=".CashbookActivity"
            android:exported="false" /> <!-- Splash / Router (Launcher) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.HisabBook.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Login (non-launcher) -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.HisabBook" /> <!-- Main (non-launcher). Optional: singleTask to avoid duplicates -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:theme="@style/Theme.HisabBook" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- App Bar with Collapsing Effect -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@drawable/gradient_header_profile"
            app:expandedTitleMarginStart="20dp"
            app:expandedTitleMarginBottom="20dp">

            <!-- Gradient Background -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_header_profile"
                app:layout_collapseMode="parallax" />

            <!-- Decorative Circles -->
            <View
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="end|top"
                android:layout_marginTop="-50dp"
                android:layout_marginEnd="-50dp"
                android:alpha="0.1"
                android:background="@drawable/circle_white"
                app:layout_collapseMode="parallax" />

            <View
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="-30dp"
                android:layout_marginBottom="20dp"
                android:alpha="0.08"
                android:background="@drawable/circle_white"
                app:layout_collapseMode="parallax" />

            <!-- Profile Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="24dp"
                app:layout_collapseMode="parallax">

                <!-- Profile Image Container with Ring -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Outer Ring -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        app:cardCornerRadius="64dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="4dp"
                        app:strokeColor="#40FFFFFF">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Profile Image Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/profileImageCard"
                        android:layout_width="112dp"
                        android:layout_height="112dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="56dp"
                        app:cardElevation="12dp">

                        <ImageView
                            android:id="@+id/profileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:visibility="gone"
                            tools:src="@drawable/ic_profile_placeholder" />

                        <TextView
                            android:id="@+id/profileInitials"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/circle_gradient_avatar"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="MB"
                            android:textColor="#FFFFFF"
                            android:textSize="36sp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Edit Badge -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/editBadge"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="6dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_edit"
                            app:tint="#6366F1" />
                    </com.google.android.material.card.MaterialCardView>
                </FrameLayout>

                <!-- Business Name -->
                <TextView
                    android:id="@+id/businessNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="My Business"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:includeFontPadding="false"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="8" />

                <!-- Email or subtitle could go here -->
                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="business@email.com"
                    android:textColor="#E0FFFFFF"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:includeFontPadding="false" />
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">


            <!-- Quick Actions Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quick Actions"
                        android:textColor="#0F172A"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:includeFontPadding="false" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Access your most used features"
                        android:textColor="#64748B"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false" />

                    <GridLayout
                        android:id="@+id/featureCardsGrid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:columnCount="2"
                        android:columnOrderPreserved="false"
                        android:alignmentMode="alignMargins"
                        android:useDefaultMargins="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Settings & More Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Settings Item -->
                    <LinearLayout
                        android:id="@+id/settingsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#EEF2FF">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_settings"
                                app:tint="#6366F1" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Settings"
                                android:textColor="#0F172A"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:includeFontPadding="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Manage your preferences"
                                android:textColor="#64748B"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif"
                                android:includeFontPadding="false" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="#CBD5E1" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="#F1F5F9" />

                    <!-- Help & Support Item -->
                    <LinearLayout
                        android:id="@+id/helpSupportLayout"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#ECFDF5">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_help"
                                app:tint="#10B981" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Help &amp; Support"
                                android:textColor="#0F172A"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:includeFontPadding="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Get help and FAQs"
                                android:textColor="#64748B"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif"
                                android:includeFontPadding="false" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="#CBD5E1" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="#F1F5F9" />

                    <!-- About Us Item -->
                    <LinearLayout
                        android:id="@+id/aboutUsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:background="?attr/selectableItemBackground">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FEF3C7">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_info"
                                app:tint="#F59E0B" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About Us"
                                android:textColor="#0F172A"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:includeFontPadding="false" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Learn more about HisabBook"
                                android:textColor="#64748B"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif"
                                android:includeFontPadding="false" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="#CBD5E1" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/logoutButton"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="20dp"
                android:text="Logout"
                android:textColor="#DC2626"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                app:icon="@drawable/ic_logout"
                app:iconTint="#DC2626"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="16dp"
                app:strokeColor="#FCA5A5"
                app:strokeWidth="2dp"
                app:rippleColor="#FEE2E2" />

            <!-- Version Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Version 1.0.0"
                android:textColor="#94A3B8"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Edit Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:text="Edit Profile"
        android:textColor="#FFFFFF"
        app:icon="@drawable/ic_edit"
        app:iconTint="#FFFFFF"
        app:backgroundTint="#6366F1"
        app:elevation="6dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
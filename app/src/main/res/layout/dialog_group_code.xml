<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background">

    <!-- Success Icon -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_check_circle"
        android:contentDescription="Success"
        app:tint="@color/hsb_primary" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Group Created Successfully!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?android:textColorPrimary" />

    <!-- Group Name -->
    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textColor="?android:textColorSecondary"
        android:text="Group Name" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="?android:attr/dividerHorizontal" />

    <!-- Code Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Share this code with others to join:"
        android:textSize="14sp"
        android:textColor="?android:textColorSecondary" />

    <!-- Code Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/hsb_primary">

        <TextView
            android:id="@+id/tvGroupCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="ABC123"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/hsb_primary"
            android:gravity="center"
            android:fontFamily="monospace"
            android:letterSpacing="0.1" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Copy Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCopyCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Copy Code"
        android:textAllCaps="false"
        app:icon="@drawable/ic_copy"
        app:iconGravity="textStart"
        style="@style/Widget.Material3.Button.TonalButton" />

    <!-- Done Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Done"
        android:textAllCaps="false"
        style="@style/Widget.Material3.Button" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Section: Staff Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Staff Avatar -->
            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tv_staff_initials"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_blue"
                    android:gravity="center"
                    android:text="MR"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"/>
            </androidx.cardview.widget.CardView>

            <!-- Staff Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tv_staff_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:background="@drawable/small_dot"
                        android:layout_marginEnd="6dp"/>

                    <TextView
                        android:id="@+id/tv_salary_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daily Salary"
                        android:textSize="13sp"
                        android:textColor="#6B7280"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Salary Badge -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FEF2F2">

                <TextView
                    android:id="@+id/tv_salary_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹500"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#DC2626"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginBottom="12dp"/>

        <!-- Bottom Section: Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Add Permission Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_permission"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Add Permission"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#6366F1"
                app:icon="@drawable/ic_add"
                app:iconTint="#6366F1"
                app:iconSize="18dp"
                app:iconGravity="textStart"
                app:iconPadding="6dp"
                app:cornerRadius="12dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E7FF"
                app:backgroundTint="#F5F7FF"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <!-- Attendance Dropdown -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F9FAFB">

                <Spinner
                    android:id="@+id/dropdown_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/attendance_options"
                    android:prompt="@string/attendance_prompt"
                    android:paddingHorizontal="12dp"
                    android:spinnerMode="dropdown"
                    android:gravity="center_vertical"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
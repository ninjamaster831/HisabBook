<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#F5F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#F5F7FA">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Friend's Name"
            app:startIconDrawable="@drawable/ic_people"
            app:boxStrokeColor="#4CAF50"
            app:hintTextColor="#4CAF50"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="16dp"
            android:transitionName="friend_name_transition">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFriendName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:textColor="#212121"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            app:startIconDrawable="@drawable/ic_phone"
            app:boxStrokeColor="#4CAF50"
            app:hintTextColor="#4CAF50"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="16dp"
            android:transitionName="phone_transition">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="#212121"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount (â‚¹)"
            app:startIconDrawable="@drawable/ic_money"
            app:boxStrokeColor="#4CAF50"
            app:hintTextColor="#4CAF50"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="16dp"
            android:transitionName="amount_transition">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:textColor="#212121"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reminder Date &amp; Time (Optional)"
            app:startIconDrawable="@drawable/ic_calendar"
            app:boxStrokeColor="#4CAF50"
            app:hintTextColor="#4CAF50"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="16dp"
            android:transitionName="reminder_transition">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etReminderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:maxLines="1"
                android:textColor="#212121"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Notes (Optional)"
            app:startIconDrawable="@drawable/ic_note_modern"
            app:boxStrokeColor="#4CAF50"
            app:hintTextColor="#4CAF50"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="16dp"
            android:transitionName="notes_transition">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:minLines="2"
                android:textColor="#212121"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="ðŸ’¡ Tip: Set a reminder to automatically get notified when it's time to follow up!"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="#757575"
            android:background="@drawable/bg_tip_rounded"
            android:padding="12dp"
            android:drawablePadding="8dp"
            android:elevation="2dp"
            android:transitionName="tip_transition" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:cardPreventCornerOverlap="true"
    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="20dp">

        <!-- Circular Avatar Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/avatarCard"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E0E7FF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Circular Group Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivGroupAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/group_avatar"
                android:visibility="gone"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Hisab.Full"/>


            <!-- Fallback Initial -->
            <TextView
                android:id="@+id/tvGroupInitial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceHeadlineMedium"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                tools:text="F"/>
        </com.google.android.material.card.MaterialCardView>

        <!-- Group Name -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@id/avatarCard"
            app:layout_constraintStart_toEndOf="@id/avatarCard"
            app:layout_constraintEnd_toStartOf="@id/ivChevron"
            tools:text="Weekend Trip"/>

        <!-- Subtitle (Budget + Date) -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="12dp"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintStart_toEndOf="@id/avatarCard"
            app:layout_constraintEnd_toStartOf="@id/ivChevron"
            app:layout_constraintBottom_toBottomOf="@id/avatarCard"
            tools:text="₹32,458 budget • 2025-09-29"/>

        <!-- Chevron Icon -->
        <ImageView
            android:id="@+id/ivChevron"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_chevron_right_hisab"
            app:tint="?attr/colorOnSurfaceVariant"
            android:contentDescription="@string/view_details"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

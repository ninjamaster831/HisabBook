<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient_background">

    <!-- Animated circles in background -->
    <View
        android:id="@+id/circle1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/circle_background_1"
        android:alpha="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-100dp"/>

    <View
        android:id="@+id/circle2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/circle_background_2"
        android:alpha="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="-80dp"
        android:layout_marginBottom="-80dp"/>

    <!-- Main content container -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.42">

        <!-- Logo container with elevated card effect -->
        <androidx.cardview.widget.CardView
            android:id="@+id/logoCard"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="16dp"
            android:alpha="0"
            app:cardBackgroundColor="@color/white">

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logo"
                android:contentDescription="@string/app_logo"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:background="@color/white"
                android:clipToOutline="true"
                android:padding="0dp" />


        </androidx.cardview.widget.CardView>

        <!-- App name with modern typography -->
        <TextView
            android:id="@+id/appNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="HisabBook"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.01"
            android:alpha="0"/>

        <!-- Tagline with elegant styling -->
        <TextView
            android:id="@+id/taglineTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Manage Your Finances with Ease"
            android:textColor="#E0FFFFFF"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.06"
            android:alpha="0"/>

    </LinearLayout>

    <!-- Modern loading indicator -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp">

        <!-- Custom loading dots -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:id="@+id/dot1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/loading_dot"
                android:layout_marginEnd="8dp"/>

            <View
                android:id="@+id/dot2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/loading_dot"
                android:layout_marginEnd="8dp"/>

            <View
                android:id="@+id/dot3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/loading_dot"/>

        </LinearLayout>

        <TextView
            android:id="@+id/loadingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Loading..."
            android:textColor="#B0FFFFFF"
            android:textSize="13sp"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.1"/>

    </LinearLayout>

    <!-- Version info at bottom -->
    <TextView
        android:id="@+id/versionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.0.0"
        android:textColor="#80FFFFFF"
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
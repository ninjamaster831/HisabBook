<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E2E8F0"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground">

        <!-- Avatar -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:cardCornerRadius="26dp"
            app:cardElevation="4dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E0E7FF">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_chat_header">

                <ImageView
                    android:id="@+id/ivMemberAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:src="@drawable/ic_person"
                    app:tint="@android:color/white"
                    android:scaleType="centerCrop"/>

                <!-- Online Status Indicator (Optional) -->
                <View
                    android:id="@+id/onlineIndicator"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/circle_online_status"
                    android:visibility="gone"/>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Member Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvMemberName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Aman Kumar"/>

                <!-- Admin Badge -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/adminBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#EEF2FF">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_star"
                            app:tint="#4F46E5"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Admin"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#4F46E5"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Email or Joined Date -->
            <TextView
                android:id="@+id/tvMemberEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="13sp"
                android:textColor="#64748B"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="aman@example.com"/>

            <!-- Member Role Tag (Alternative to badge) -->
            <TextView
                android:id="@+id/tvMemberRole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:textColor="#94A3B8"
                android:visibility="gone"
                tools:text="Member since Oct 2025"/>
        </LinearLayout>

        <!-- Action Buttons Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Make/Remove Admin Button (For Admins) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMakeAdmin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:padding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:visibility="gone"
                app:icon="@drawable/ic_star"
                app:iconSize="20dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconTint="#F59E0B"
                style="@style/Widget.Material3.Button.IconButton"
                app:cornerRadius="20dp"/>

            <!-- More Options Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMemberOptions"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:visibility="gone"
                app:icon="@drawable/ic_more_vert"
                app:iconSize="20dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconTint="#64748B"
                style="@style/Widget.Material3.Button.IconButton"
                app:cornerRadius="20dp"/>

            <!-- Remove Member Button (For Admins) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemoveMember"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:visibility="gone"
                app:icon="@drawable/ic_close"
                app:iconSize="20dp"
                app:iconPadding="0dp"
                app:iconGravity="textStart"
                app:iconTint="#EF4444"
                style="@style/Widget.Material3.Button.IconButton"
                app:cornerRadius="20dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
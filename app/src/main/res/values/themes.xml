<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HisabBook" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.HisabBook" parent="Base.Theme.HisabBook" />
    <style name="Theme.VioletApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/violet_dark_primary</item>
        <item name="colorPrimaryVariant">@color/violet_dark_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/violet_accent</item>
        <item name="colorSecondaryVariant">@color/violet_light_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/violet_dark_background</item>
        <item name="colorSurface">@color/violet_dark_surface</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:statusBarColor">@color/violet_dark_primary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <!-- Medium title for toolbar -->
    <style name="Toolbar.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Splash Theme -->
    <style name="Theme.HisabBook.Splash" parent="Theme.VioletApp">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>